@inherits BaseEditorParameters
@typeparam TItem
@typeparam TValue

<SfComboBox @ref="_ComboBox"
            TValue="TValue"
            TItem="TItem"
            Placeholder=@Placeholder
            CssClass="e-multi-column"
            @bind-Value="@Value"
            DataSource="@DataSource"
            AllowFiltering="@AllowFiltering"
            Query="@Query"
            PopupWidth="@PopupWidth"
            PopupHeight="@PopupHeight" Enabled=@Enabled EnableRtl=@EnableRtl Autofill=@Autofill>

    <ComboBoxFieldSettings Text="@TextFieldName" Value="@TextValueName"></ComboBoxFieldSettings>
    <ComboBoxTemplates TItem="TItem">
        <HeaderTemplate>
            @HeaderTemplateContent
        </HeaderTemplate>
        <ItemTemplate Context="context">
            @ItemTemplateContent
        </ItemTemplate>
        <FooterTemplate>
            @FooterTemplateContent
        </FooterTemplate>
    </ComboBoxTemplates>
    <ComboBoxEvents TValue="string" TItem="TItem" Filtering="OnFiltering"></ComboBoxEvents>

</SfComboBox>


@code {

    private SfComboBox<TValue, TItem> _ComboBox;

    [Parameter, EditorRequired] public IEnumerable<TItem> DataSource { get; set; }
    [Parameter, EditorRequired] public TValue Value { get; set; }
    [Parameter] public EventCallback<TValue> ValueChanged { get; set; }
    [Parameter] public EventCallback<FilteringEventArgs> OnFiltering { get; set; }
    [Parameter] public Query Query { get; set; }
    [Parameter] public string PopupWidth { get; set; }
    [Parameter] public string PopupHeight { get; set; }
    [Parameter] public string HeaderTemplateContent { get; set; }
    [Parameter] public string ItemTemplateContent { get; set; }
    [Parameter] public string FooterTemplateContent { get; set; }
    [Parameter] public string TextFieldName { get; set; }
    [Parameter] public string TextValueName { get; set; }
    [Parameter] public bool AllowFiltering { get; set; }

}