@inherits BaseModalComponent

<div class="separatorConfirm"></div>
<div class="card-body">
    <table style="width:100%">
        <tr>
            <td style="width:30%">
                <div style="width: 50%; height: 100%; border-radius: 100%;border: 3px solid #343333;">
                    <i class="fa fa-info fa-3x"></i>
                </div>
            </td>
            <td style="width:70%">
                <p style="color:#A50000;font-size:14px;text-align: left;">@HtmlMessage</p>
            </td>

        </tr>
    </table>



</div>



<div class="row justify-content-center">

    <div class="TSIConfirmModalFooter">

        <SfButton CssClass="TSICancelButton" @onclick="@ConfirmClicked"><SfIcon Size="IconSize.Medium" Name="IconName.Check"></SfIcon>&nbsp;@OkText</SfButton>

    </div>

</div>

<style>
    .separatorConfirm {
        border: 1px solid black;
        opacity: 0.74;
        width: 92%;
        margin: 1rem;
        margin-top: 0px;
    }
</style>

@code {

    public MarkupString HtmlMessage { get; set; }


    public async override Task SetParametersAsync(ParameterView parameters)
    {

        Message = parameters.GetValueOrDefault<String>("Message", "Mesaj Yok");


        if (!Message.Contains("<li>"))
        {
            int numberofCharacters = Message.Length;

            if (numberofCharacters > 50 && 100 >= numberofCharacters)
            {
                Message = Message.Insert(45, "\n");
            }

            else if (numberofCharacters > 100 && 150 >= numberofCharacters)
            {
                Message = Message.Insert(45, "\n");
                Message = Message.Insert(90, "\n");
            }

            else if (numberofCharacters > 150 && 200 >= numberofCharacters)
            {
                Message = Message.Insert(45, "\n");
                Message = Message.Insert(90, "\n");
                Message = Message.Insert(135, "\n");
            }
            else if (numberofCharacters > 200)
            {
                Message = Message.Insert(45, "\n");
                Message = Message.Insert(90, "\n");
                Message = Message.Insert(135, "\n");
                Message = Message.Insert(180, "\n");
            }
        }

        OkText = parameters.GetValueOrDefault<String>("OkText", "Tamam");

        HtmlMessage = new MarkupString(Message);

        await base.SetParametersAsync(parameters);
    }
}
