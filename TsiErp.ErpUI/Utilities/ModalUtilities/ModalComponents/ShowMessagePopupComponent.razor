@inherits BaseModalComponent
@inject IStringLocalizer<ModalsResource> L

<div class="separatorConfirm"></div>
<div class="card-body">
    <table style="width:100%">
        <tr>
            <td style="width:30%">
                <div style="width: 50%; height: 100%; border-radius: 100%;border: 3px solid #343333;">
                    <i class="fa fa-info fa-3x"></i>
                </div>
            </td>
            <td style="width:70%">
                <p style="color:#A50000;font-size:14px;text-align: left;">@HtmlMessage</p>
            </td>

        </tr>
    </table>



</div>



<div class="row justify-content-center">

    <div class="TSIConfirmModalFooter">

        <SfButton CssClass="TSICancelButton" @onclick="@ConfirmClicked"><SfIcon Size="IconSize.Medium" Name="IconName.Check"></SfIcon>&nbsp;@OkText</SfButton>

    </div>

</div>

<style>
    .separatorConfirm {
        border: 1px solid black;
        opacity: 0.74;
        width: 92%;
        margin: 1rem;
        margin-top: 0px;
    }
</style>

@code {

    public MarkupString HtmlMessage { get; set; }


    public async override Task SetParametersAsync(ParameterView parameters)
    {

        Message = parameters.GetValueOrDefault<String>("Message", L["NoMessage"]);


        OkText = parameters.GetValueOrDefault<String>("OkText", L["Ok"]);

        HtmlMessage = new MarkupString(Message);

        await base.SetParametersAsync(parameters);
    }
}
