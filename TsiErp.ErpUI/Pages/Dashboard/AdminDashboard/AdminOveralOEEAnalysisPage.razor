                </GridColumn>
                <GridColumn Field=@nameof(AdminOveralOEEChart.AVAILABILITY) Format="P2" Type="ColumnType.Number" HeaderText=@L["AVAILABILITY"] TextAlign="Syncfusion.Blazor.Grids.TextAlign.Center" Width="120">
                </GridColumn>
                <GridColumn Field=@nameof(AdminOveralOEEChart.OEE) Format="P2" Type="ColumnType.Number" HeaderText=@L["OEE"] TextAlign="Syncfusion.Blazor.Grids.TextAlign.Center" Width="120">
                </GridColumn>
                <GridColumn Field=@nameof(AdminOveralOEEChart.DIFFOEE) Format="P2" Type="ColumnType.Number" HeaderText=@L["DIFFOEE"] TextAlign="Syncfusion.Blazor.Grids.TextAlign.Center" Width="120">
