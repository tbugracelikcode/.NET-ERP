            <GridColumns>
                <GridColumn Field=@nameof(AdminOveralOEEChart.MONTH) HeaderText=@L["MONTH"] TextAlign="Syncfusion.Blazor.Grids.TextAlign.Center" Width="120">
                   @*  <Template>
                        @{
                            string date = L[(context as AdminOveralOEEChart).MONTH] + " " +  (context as AdminOveralOEEChart).YEAR.ToString();
                        }
                        @date
                    </Template> *@
