@page "/standart-product-status-analysis"
@layout MainLayout

@inject IProductsAppService ProductsAppService
@inject IStockFichesAppService StockFichesAppService
@inject IContractTrackingFichesAppService ContractTrackingFichesAppService
@inject IProductionOrdersAppService ProductionOrdersAppService
@inject IGrandTotalStockMovementsAppService GrandTotalStockMovementsAppService
@inject IWorkOrdersAppService WorkOrdersAppService
@inject IBillsofMaterialsAppService BillsofMaterialsAppService

<DevGridLayout ColumnCount="1" RowCount="3" RowHeights="@RowHeights("*")">
    <GridLayoutItems>
        <DxGridLayoutItem Row="0" Column="0" ColumnSpan="1">
            <Template>
                <SfCard class="TSIListPageTitleCard">
                    <CardContent>
                        <TsiBreadCrumb PreviousMenus="Dashboard > Operasyonel Dashboard " CurrentMenu=" Standart Ürün Stok Durumu Analizi" />
                    </CardContent>
                    <CardFooter>
                    </CardFooter>
                </SfCard>
            </Template>
        </DxGridLayoutItem>
        <DxGridLayoutItem Row="2" Column="0" ColumnSpan="1">
            <Template>
                <SfCard class="TSIGridCards">

                    <CardContent>
                        <SfGrid ID="Grid" @ref="_grid" AllowPdfExport=true ColumnMenuItems=@MenuItems ShowColumnMenu="true" DataSource="@StandartProductAnalysisList" AllowPaging="false" AllowFiltering="true" AllowReordering="true" AllowResizing="true" AllowGrouping="true" AllowExcelExport="true" ShowColumnChooser="true" GridLines="GridLine.Both" AllowSelection="true" AllowSorting="true" Height="100%" Width="100%" class="GridZebra" ContextMenuItems="@GridContextMenu">
                            <GridGroupSettings Columns="@InitialGroup" ShowGroupedColumn="true"></GridGroupSettings>

                            <GridEvents ContextMenuItemClicked="@OnContextMenuClick" TValue="StandartProductAnalysis"></GridEvents>
                            <GridEditSettings AllowAdding="false" AllowEditing="false" AllowDeleting="false" Mode="Syncfusion.Blazor.Grids.EditMode.Normal"></GridEditSettings>
                            <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Menu"></GridFilterSettings>
                            <GridPageSettings PageSizes="true"></GridPageSettings>
                            <GridSelectionSettings Type="Syncfusion.Blazor.Grids.SelectionType.Multiple"></GridSelectionSettings>
                            <GridColumns>
                                <GridColumn Field=@nameof(StandartProductAnalysis.ProductGroupName) HeaderText="ÜRÜN GRUBU" TextAlign="TextAlign.Center" Width="160"></GridColumn>
                                <GridColumn Field=@nameof(StandartProductAnalysis.ProductCode) HeaderText="STOK KODU" TextAlign="TextAlign.Center" Width="160"></GridColumn>
                                <GridColumn Field=@nameof(StandartProductAnalysis.ReadyStockQuantity) Format="N2" Type="ColumnType.Number" HeaderText="HAZIR STOK" TextAlign="TextAlign.Center" Width="160"></GridColumn>
                                <GridColumn Field=@nameof(StandartProductAnalysis.CriticalStockQuantity) Format="N2" Type="ColumnType.Number" HeaderText="KRİTİK STOK MİKTARI" TextAlign="TextAlign.Center" Width="240"></GridColumn>
                                <GridColumn Field=@nameof(StandartProductAnalysis.CriticalReadyStockDifferenceQuantity) Format="N2" Type="ColumnType.Number" HeaderText="KRİTİK - FİİLİ STOK FARKI" TextAlign="TextAlign.Center" Width="240"></GridColumn>
                                <GridColumn Field=@nameof(StandartProductAnalysis.ProductionContinuingQuantity) Format="N2" Type="ColumnType.Number" HeaderText="ÜRETİM DEVAM EDEN MİKTAR" TextAlign="TextAlign.Center" Width="300"></GridColumn>
                                <GridColumn Field=@nameof(StandartProductAnalysis.ContractContinuingQuantity) Format="N2" Type="ColumnType.Number" HeaderText="FASON DEVAM EDEN MİKTAR" TextAlign="TextAlign.Center" Width="300"></GridColumn>
                                <GridColumn Field=@nameof(StandartProductAnalysis.OpenWorkOrdersPlannedQuantity) Format="N2" Type="ColumnType.Number" HeaderText="AÇIK İŞ EMİRLERİ İHTİYAÇ MİKTARI" TextAlign="TextAlign.Center" Width="300"></GridColumn>
                                <GridColumn Field=@nameof(StandartProductAnalysis.OpenWorkOrdersRequirementQuantity) Format="N2" Type="ColumnType.Number" HeaderText="AÇIK İŞ EMİRLERİNE GÖRE KALACAK STOK MİKTARI" TextAlign="TextAlign.Center" Width="300"></GridColumn>
                            </GridColumns>

                        </SfGrid>

                    </CardContent>
                    <CardFooter>
                    </CardFooter>
                </SfCard>
            </Template>
        </DxGridLayoutItem>
    </GridLayoutItems>
</DevGridLayout>

<DxPopup @bind-Visible="RawMaterialModalVisible"
         ShowFooter="true"
         CloseOnEscape="false"
         CloseOnOutsideClick="false"
         HeaderText="Hammadde Stok Miktarları"
         Width="50%"
         Height="62%"
         MinWidth="960px"
         MinHeight="675px"
         HeaderCssClass="HeaderTitleCss">

    <BodyTemplate>
        <DxGridLayout CssClass="TSIGridLayout">

            <Rows>
                <DxGridLayoutRow Height="90%" />
            </Rows>

            <Columns>
                <DxGridLayoutColumn Width="2%" />
                <DxGridLayoutColumn Width="96%" />
                <DxGridLayoutColumn Width="2%" />

            </Columns>

            <Items>
                <br />
                <DxGridLayoutItem Row="0" Column="1">
                    <Template>
                        <SfGrid ID="rawgrid" @ref="_rawgrid" AllowPdfExport=true ColumnMenuItems=@MenuItems ShowColumnMenu="true" DataSource="@RawMaterialDetailList" AllowPaging="false" AllowFiltering="true" AllowReordering="true" AllowResizing="true" AllowGrouping="true" AllowExcelExport="true" ShowColumnChooser="true" GridLines="GridLine.Both" AllowSelection="true" AllowSorting="true" Height="100%" Width="100%" class="GridZebra">
                            <GridGroupSettings ShowGroupedColumn="true"></GridGroupSettings>

                            <GridEditSettings AllowAdding="false" AllowEditing="false" AllowDeleting="false" Mode="Syncfusion.Blazor.Grids.EditMode.Normal"></GridEditSettings>
                            <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Menu"></GridFilterSettings>
                            <GridPageSettings PageSizes="true"></GridPageSettings>
                            <GridSelectionSettings Type="Syncfusion.Blazor.Grids.SelectionType.Multiple"></GridSelectionSettings>
                            <GridColumns>
                                <GridColumn Field=@nameof(RawMaterialDetail.ProductCode) HeaderText="HAMMADDE KODU" TextAlign="TextAlign.Center" Width="160"></GridColumn>
                                <GridColumn Field=@nameof(RawMaterialDetail.RawMaterialQuantity) Format="N2" Type="ColumnType.Number" HeaderText="HAMMADDE STOK MİKTARI" TextAlign="TextAlign.Center" Width="280"></GridColumn>
                                <GridColumn Field=@nameof(RawMaterialDetail.UnitSetCode) HeaderText="BİRİM SETİ" TextAlign="TextAlign.Center" Width="160"></GridColumn>
                                <GridColumn Field=@nameof(RawMaterialDetail.RawMateriaPossiblelQuantity) Format="N2" Type="ColumnType.Number" HeaderText="HAMMADDE STOK MİKTARI" TextAlign="TextAlign.Center" Width="280"></GridColumn>
                            </GridColumns>

                        </SfGrid>
                    </Template>
                </DxGridLayoutItem>


            </Items>
        </DxGridLayout>
    </BodyTemplate>
    <FooterContentTemplate>
        <SfButton CssClass="TSICancelButton" OnClick="HideRawMaterialModal"><SfIcon Size="IconSize.Medium" Name="IconName.Undo"></SfIcon>&nbsp;Kapat</SfButton>
    </FooterContentTemplate>
</DxPopup>