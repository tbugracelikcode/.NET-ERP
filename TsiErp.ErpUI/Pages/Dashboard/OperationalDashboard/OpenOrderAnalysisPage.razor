@page "/open-order-analysis"
@using System.Dynamic
@using Syncfusion.Blazor.PivotView
@using TsiErp.ErpUI.Models.Dashboard.OperationalDashboard.OpenOrderAnalysis
@using TsiErp.ErpUI.Services.Dashboard.OperationalDashboard.OpenOrderAnalysis


@layout MainLayout

@inject IOpenOrderAnalysisAppService OpenOrderAnalysisAppService

<DevGridLayout ColumnCount="1" RowCount="3" RowHeights="@RowHeights("*")">
    <GridLayoutItems>
        <DxGridLayoutItem Row="0" Column="0" ColumnSpan="1">
            <Template>
                <SfCard class="TSIListPageTitleCard">
                    <CardContent>
                        <TsiBreadCrumb PreviousMenus="Dashboard > Operasyonel Dashboard " CurrentMenu=" Sipariş Güncel Bakiye Analizi" />
                    </CardContent>
                    <CardFooter>
                    </CardFooter>
                </SfCard>
            </Template>
        </DxGridLayoutItem>
        <DxGridLayoutItem Row="2" Column="0" ColumnSpan="1">
            <Template>
                <SfCard class="TSIGridCards">

                    <CardContent>

                        <SfPivotView 
                            TValue="CurrentBalanceAndQuantityTableDto" 
                            Height="300">

                            <PivotViewDataSourceSettings DataSource="@GridList">
                                <PivotViewColumns>
                                    <PivotViewColumn Name=@nameof(CurrentBalanceAndQuantityTableDto.LoadingDate)>

                                    </PivotViewColumn>
                                </PivotViewColumns>
                                <PivotViewRows>
                                    <PivotViewRow Name=@nameof(CurrentBalanceAndQuantityTableDto.ProductGroupName)></PivotViewRow>
                                </PivotViewRows>
                                <PivotViewValues>
                                    <PivotViewValue Name=@nameof(CurrentBalanceAndQuantityTableDto.Value)></PivotViewValue>
                                </PivotViewValues>
                                <PivotViewFormatSettings>
                                    <PivotViewFormatSetting Name=@nameof(CurrentBalanceAndQuantityTableDto.Value) Format="N0"></PivotViewFormatSetting>
                                </PivotViewFormatSettings>
                               
                            </PivotViewDataSourceSettings>

                            <PivotViewEvents TValue="CurrentBalanceAndQuantityTableDto" CellClick="CellClick"></PivotViewEvents>
                        </SfPivotView>
                    </CardContent>
                    <CardFooter>
                    </CardFooter>
                </SfCard>
            </Template>
        </DxGridLayoutItem>
    </GridLayoutItems>
</DevGridLayout>

@if (ProductionOrdersDetailPopupVisible)
{
    <DxPopup @bind-Visible="ProductionOrdersDetailPopupVisible"
             ShowFooter="true"
             CloseOnEscape="false"
             CloseOnOutsideClick="false"
             HeaderText="Üretim Emirleri"
             Width="62%"
             Height="62%"
             MinWidth="1200px"
             MinHeight="675px"
             HeaderCssClass="HeaderTitleCss">
        <BodyTemplate>

            <DxGridLayout CssClass="TSIGridLayout">

                <Rows>
                    <DxGridLayoutRow Height="92%" />
                </Rows>

                <Columns>
                    <DxGridLayoutColumn Width="1%" />
                    <DxGridLayoutColumn Width="98%" />
                    <DxGridLayoutColumn Width="1%" />

                </Columns>

                <Items>
                    <br />
                    <DxGridLayoutItem Row="0" Column="1">
                        <Template>
                            <SfGrid ID="ProductionOrdersGrid" DataSource="@ProductionOrdersDetailList" ColumnMenuItems=@MenuItems ShowColumnMenu="true" AllowPaging="true" AllowFiltering="true" AllowReordering="true" AllowResizing="true" AllowGrouping="true" AllowExcelExport="true" AllowSelection="true" ShowColumnChooser="true" GridLines="GridLine.Both" AllowSorting="true" Height="100%" Width="100%" class="GridZebra">
                                <GridGroupSettings ShowGroupedColumn="true"></GridGroupSettings>

                                <GridEditSettings AllowAdding="false" AllowEditing="false" AllowDeleting="false" Mode="Syncfusion.Blazor.Grids.EditMode.Normal"></GridEditSettings>
                                <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.Menu"></GridFilterSettings>
                                <GridPageSettings PageSizes="true"></GridPageSettings>
                                <GridSelectionSettings Type="Syncfusion.Blazor.Grids.SelectionType.Multiple"></GridSelectionSettings>
                                <GridColumns>
                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.ProductionOrderFicheNo) HeaderText="ÜRETİM EMRİ NUMARASI" TextAlign="TextAlign.Center" Width="230"></GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.PlannedLoadingDate) HeaderText="GÜNCEL YÜKLEME LİSTESİ" TextAlign="TextAlign.Center" Width="236" Type="ColumnType.DateTime" Format="d"></GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.ConfirmedLoadingDate) HeaderText="YÜKLEME TARİHİ" TextAlign="TextAlign.Center" Width="170" Type="ColumnType.DateTime" Format="d"></GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.CustomerOrderNo) HeaderText="MÜŞTERİ SİPARİŞ NUMARASI" TextAlign="TextAlign.Center" Width="265"></GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.FinishedProductCode) HeaderText="MAMÜL KODU" TextAlign="TextAlign.Center" Width="160"></GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.FinishedProductCode) HeaderText="MAMÜL AÇIKLAMASI" TextAlign="TextAlign.Center" Width="250"></GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.ProductGroupName) HeaderText="ÜRÜN GRUBU" TextAlign="TextAlign.Center" Width="175"></GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.PlannedQuantity) HeaderText="PLANLANAN ÜRETİM MİKTARI" TextAlign="TextAlign.Center" Type="ColumnType.Number" Width="270" Format="N0"></GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.AS) HeaderText="AŞIK" TextAlign="TextAlign.Center" Width="160">
                                    </GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.GV) HeaderText="GÖVDE" TextAlign="TextAlign.Center" Width="160">
                                    </GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.ML) HeaderText="MİL" TextAlign="TextAlign.Center" Width="160">
                                    </GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.BR) HeaderText="BURÇ" TextAlign="TextAlign.Center" Width="160">
                                    </GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.PL) HeaderText="PUL" TextAlign="TextAlign.Center" Width="160">
                                    </GridColumn>

                                    <GridColumn Field=@nameof(ProductionOrdersDetailDto.SC) HeaderText="SAC" TextAlign="TextAlign.Center" Width="160">
                                    </GridColumn>

                                </GridColumns>
                            </SfGrid>
                        </Template>
                    </DxGridLayoutItem>

                   



                </Items>
            </DxGridLayout>


        </BodyTemplate>
        <FooterContentTemplate>
            <SfButton CssClass="TSICancelButton" OnClick="HideProductionOrdersDetailPage"><SfIcon Size="IconSize.Medium" Name="IconName.Undo"></SfIcon>&nbsp; Kapat</SfButton>
        </FooterContentTemplate>
    </DxPopup>
}