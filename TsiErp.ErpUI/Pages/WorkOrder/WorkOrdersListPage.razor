                                    <GridColumn Field=@nameof(ListWorkOrdersDto.WorkOrderState) HeaderText="DURUM" TextAlign="TextAlign.Center" Width="120"></GridColumn>
                                    <GridColumn Field=@nameof(ListWorkOrdersDto.AdjustmentAndControlTime) HeaderText="AYAR VE KONTROL SÜRESİ" Type="ColumnType.Number" TextAlign="TextAlign.Center" Width="120"></GridColumn>
