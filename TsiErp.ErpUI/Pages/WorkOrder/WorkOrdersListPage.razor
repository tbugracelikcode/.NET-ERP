                                    <GridColumn Field=@nameof(ListWorkOrdersDto.OccuredStartDate) HeaderText="GERÇEKLEŞEN BAŞLANGIÇ TARİHİ" Type="ColumnType.DateTime" TextAlign="TextAlign.Center" Width="120"></GridColumn>
                                    <GridColumn Field=@nameof(ListWorkOrdersDto.OccuredFinishDate) HeaderText="GERÇEKLEŞEN BİTİŞ TARİHİ" Type="ColumnType.DateTime" TextAlign="TextAlign.Center" Width="120"></GridColumn>
                                    <GridColumn Field=@nameof(ListWorkOrdersDto.PlannedQuantity) HeaderText="PLANLANAN MİKTAR" TextAlign="TextAlign.Center" Type="ColumnType.Number" Width="120"></GridColumn>
                                    <GridColumn Field=@nameof(ListWorkOrdersDto.ProducedQuantity) HeaderText="GERÇEKLEŞEN MİKTAR" TextAlign="TextAlign.Center" Type="ColumnType.Number" Width="120"></GridColumn>
                                    <GridColumn Field=@nameof(ListWorkOrdersDto.ProductionOrderFicheNo) HeaderText="ÜRETİM EMRİ FİŞ NO" TextAlign="TextAlign.Center" Width="120"></GridColumn>
                                    <GridColumn Field=@nameof(ListWorkOrdersDto.PropositionFicheNo) HeaderText="SİPARİŞ FİŞ NO" TextAlign="TextAlign.Center" Width="120"></GridColumn>
