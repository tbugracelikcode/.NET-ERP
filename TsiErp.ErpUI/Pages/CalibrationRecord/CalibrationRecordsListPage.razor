@page "/calibration-records"
@using Syncfusion.Blazor.Buttons
@using TsiErp.Business.Entities.CalibrationRecord.Services
@using TsiErp.Entities.Entities.CalibrationRecord
@using TsiErp.Entities.Entities.CalibrationRecord.Dtos
@using TsiErp.ErpUI.Pages.Base
@using Tsi.Blazor.Component.Core.Components.Layouts


@inject ICalibrationRecordsAppService CalibrationRecordsService

<DxGridLayout CssClass="w-100 ch-480">
    <Rows>
        <DxGridLayoutRow Height="50px" />
        <DxGridLayoutRow Height="1px" />
        <DxGridLayoutRow />
    </Rows>
    <Columns>
        <DxGridLayoutColumn />
    </Columns>
    <Items>
        <DxGridLayoutItem Row="0" Column="0" ColumnSpan="1">
            <Template>
                <SfCard class="FilterCard">
                    <CardContent>
                        <table width="1000px">
                            <tr>
                                <td width="400px">
                                    <span style="float:left">
                                        <label class="FilterLabelTitle" style="color:#9C0000"><strong>Kalite Kontrol > İşlemler > Ekipman İşlemleri ></strong></label><label class="FilterLabelTitle">&nbsp;Kalibrasyon Takip Kayıtları</label>
                                    </span>
                                </td>
                                <td width="200px">
                                </td>
                                <td width="200px">
                                </td>
                                <td width="100px">
                                </td>
                                <td width="100px">
                                </td>
                            </tr>
                        </table>
                    </CardContent>
                    <CardFooter>
                    </CardFooter>
                </SfCard>
            </Template>
        </DxGridLayoutItem>
        <DxGridLayoutItem Row="2" Column="0" ColumnSpan="1">
            <Template>
                <SfCard class="Cards">
                    <CardHeader>
                        <SfButton CssClass="TSIGeneralBTNRed" OnClick="@OnPopupButtonClicked">Filtrele</SfButton>
                    </CardHeader>
                    <CardContent>
                        <SfGrid ID="Grid" DataSource="@Gridlist" AllowPaging="false" AllowFiltering="true" AllowReordering="true" AllowResizing="true" AllowGrouping="true" AllowExcelExport="true" AllowSelection="true"
                                AllowSorting="true" Height="100%" Width="100%" class="GridZebra">
                            <GridEditSettings AllowAdding="false" AllowEditing="false" AllowDeleting="false" Mode="EditMode.Normal"></GridEditSettings>
                            <GridFilterSettings Type="Syncfusion.Blazor.Grids.FilterType.FilterBar"></GridFilterSettings>
                            <GridPageSettings PageSizes="true"></GridPageSettings>
                            <GridSelectionSettings Type="Syncfusion.Blazor.Grids.SelectionType.Multiple"></GridSelectionSettings>
                            <GridColumns>
                                <GridColumn Field=@nameof(ListCalibrationRecordsDto.Code) HeaderText="KALİBRASYON TAKİP KODU" TextAlign="TextAlign.Center" Width="120"></GridColumn>
                                <GridColumn Field=@nameof(ListCalibrationRecordsDto.Name) HeaderText="KALİBRASYON TAKİP AÇIKLAMASI" TextAlign="TextAlign.Center" Width="120"></GridColumn>
                                <GridColumn Field=@nameof(ListCalibrationRecordsDto.ReceiptNo) HeaderText="FİŞ NO" TextAlign="TextAlign.Center" Width="120"></GridColumn>
                                <GridColumn Field=@nameof(ListCalibrationRecordsDto.Equipment) HeaderText="EKİPMAN" TextAlign="TextAlign.Center" Width="120"></GridColumn>
                                <GridColumn Field=@nameof(ListCalibrationRecordsDto.Date) HeaderText="TARİH" TextAlign="TextAlign.Center" Width="120"></GridColumn>
                                <GridColumn Field=@nameof(ListCalibrationRecordsDto.NextControl) HeaderText="SONRAKİ KONTROL" TextAlign="TextAlign.Center" Width="120"></GridColumn>
                                <GridColumn Field=@nameof(ListCalibrationRecordsDto.InfinitiveCertificateNo) HeaderText="MASTAR SERTİFİKA NO" TextAlign="TextAlign.Center" Width="120"></GridColumn>
                                <GridColumn Field=@nameof(ListCalibrationRecordsDto.Result) HeaderText="SONUÇ" TextAlign="TextAlign.Center" Width="120"></GridColumn>

                            </GridColumns>
                        </SfGrid>

                    </CardContent>
                    <CardFooter>
                    </CardFooter>
                </SfCard>
            </Template>
        </DxGridLayoutItem>
    </Items>
</DxGridLayout>

<DxPopup Visible="@PopupVisible"
         ShowFooter="true"
         CloseOnEscape="false"
         CloseOnOutsideClick="false"
         HeaderText="Kalibrasyon Takip Kayıtları"
         Width="1080px"
         Height="480px"
         Closing="CalibrationRecordsPopupClosing"
         HeaderCssClass="HeaderTitleCss">
    <BodyTemplate>

        <DxGridLayout>

            <Rows>
                <DxGridLayoutRow Height="120px" />
                <DxGridLayoutRow Height="1px" />
                <DxGridLayoutRow Height="120px" />
                <DxGridLayoutRow Height="1px" />
                <DxGridLayoutRow Height="100px" />
            </Rows>

            <Columns>
                <DxGridLayoutColumn Width="40px" />
                <DxGridLayoutColumn Width="300px" />
                <DxGridLayoutColumn Width="40px" />
                <DxGridLayoutColumn Width="300px" />
                <DxGridLayoutColumn Width="40px" />
                <DxGridLayoutColumn Width="300px" />
                <DxGridLayoutColumn Width="40px" />
            </Columns>

            <Items>
                <DxGridLayoutItem Row="0" Column="1">
                    <Template>
                        <br />
                        <label class="FilterLabelTitle"><strong>Kalibrasyon Takip Kodu: </strong></label>
                        <SfTextBox CssClass="TSITxtBox" Placeholder="Kalibrasyon Takip Kodunu Yazınız."></SfTextBox>
                    </Template>
                </DxGridLayoutItem>
                <DxGridLayoutItem Row="0" Column="3">
                    <Template>
                        <br />
                        <label class="FilterLabelTitle"><strong>Kalibrasyon Takip Açıklaması: </strong></label>
                        <SfTextBox CssClass="TSITxtBox" Placeholder="Kalibrasyon Takip Açıklamasını Yazınız."></SfTextBox>
                    </Template>
                </DxGridLayoutItem>
                <DxGridLayoutItem Row="0" Column="5">
                    <Template>
                        <br />
                        <label class="FilterLabelTitle"><strong>Fiş No: </strong></label>
                        <SfTextBox CssClass="TSITxtBox" Placeholder="Fiş Numarasını Yazınız."></SfTextBox>
                    </Template>
                </DxGridLayoutItem>
                <DxGridLayoutItem Row="2" Column="1">
                    <Template>
                        <label class="FilterLabelTitle"><strong>Mastar Sertifika No: </strong></label><br />
                        <SfTextBox CssClass="TSITxtBox" Placeholder="Mastar Sertifika Numarasını Yazınız."></SfTextBox>
                    </Template>
                </DxGridLayoutItem>
                <DxGridLayoutItem Row="2" Column="3">
                    <Template>
                        <label class="FilterLabelTitle"><strong>Ekipman: </strong></label><br />
                        <SfTextBox CssClass="TSITxtBox" Placeholder="Ekipmanı Yazınız."></SfTextBox>
                    </Template>
                </DxGridLayoutItem>
                <DxGridLayoutItem Row="2" Column="5">
                    <Template>
                        <label class="FilterLabelTitle"><strong>Tarih: </strong></label><br />
                        <SfDatePicker @bind-Value="@tarih"></SfDatePicker>
                    </Template>
                </DxGridLayoutItem>
                <DxGridLayoutItem Row="4" Column="1">
                    <Template>
                        <label class="FilterLabelTitle"><strong>Bir Sonraki Kontrol: </strong></label>
                        <SfDatePicker @bind-Value="@tarih"></SfDatePicker>
                    </Template>
                </DxGridLayoutItem>
                <DxGridLayoutItem Row="4" Column="3">
                    <Template>
                        <label class="FilterLabelTitle"><strong>Sonuç: </strong></label><br />
                        <SfTextBox CssClass="TSITxtBox" Placeholder="Sonucu Yazınız."></SfTextBox>
                    </Template>
                </DxGridLayoutItem>
                <DxGridLayoutItem Row="4" Column="5">
                    <Template>

                    </Template>
                </DxGridLayoutItem>

            </Items>

        </DxGridLayout>
    </BodyTemplate>
    <FooterContentTemplate>
       <SfButton  CssClass="TSISaveButton"  OnClick="@(() => PopupVisible = false)"><SfIcon Size="IconSize.Medium" Name="IconName.Save"></SfIcon>&nbsp;Kaydet</SfButton>
        <SfButton CssClass="TSICancelButton" OnClick="@(() => PopupVisible = false)"><SfIcon Size="IconSize.Medium" Name="IconName.Close"></SfIcon>&nbsp;Kapat</SfButton>
    </FooterContentTemplate>
</DxPopup>
