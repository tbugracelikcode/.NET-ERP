@page "/planning-management-parameters"
@layout MainLayout


@inherits BaseListPage<SelectPlanningManagementParametersDto, ListPlanningManagementParametersDto, CreatePlanningManagementParametersDto, UpdatePlanningManagementParametersDto, ListPlanningManagementParametersParameterDto>

@inject IPlanningManagementParametersAppService PlanningManagementParametersService
@inject IStringLocalizer<PlanningManagementParametersResource> L

 @if (!base.IsLoaded)
{
    <CircleLoading Caption="@base.LoadingCaption" Text="@base.LoadingText" />
}
else
{
    <DevGridLayout ColumnCount="1" RowCount="3" RowHeights="@RowHeights("*")">
        <GridLayoutItems>
            <DxGridLayoutItem Row="0" Column="0" ColumnSpan="1">
                <Template>
                    <SfCard class="TSIListPageTitleCard">
                        <CardContent>
                            <TsiBreadCrumb PreviousMenus="@L["UIPreviousMenu"]" CurrentMenu="@L["UICurrentMenu"]" />
                        </CardContent>
                        <CardFooter>
                        </CardFooter>
                    </SfCard>
                </Template>
            </DxGridLayoutItem>
            <DxGridLayoutItem Row="2" Column="0" ColumnSpan="1">
                <Template>
                    <SfCard class="TSIGridCards">
                        <CardContent>
                              <br />
                        <table style="width:100%;">
                            <tr>
                                <td style="width: 40%; text-align: left;height: 80px; padding-left: 2%;">
                                   
                                        <label class="TSIEditFormLabel">•@L["MRPPurchaseTransactionLabel"] </label><br />
                                    

                                </td>

                            </tr>
                            <tr>
                                 <td style="width: 30%; text-align: left;height: 80px; padding-top: 1%;">
                                      <SfComboBox TValue="string" Index="DataSource.MRPPurchaseTransaction-1" TItem="MRPPurchaseComboBox" DataSource="@_mrpPurchaseComboBox">
                                            <ComboBoxEvents TItem="MRPPurchaseComboBox" TValue="string" ValueChange="@MRPPurchaseComboBoxValueChangeHandler"></ComboBoxEvents>
                                    <ComboBoxFieldSettings Value="ID" Text="Text"></ComboBoxFieldSettings>
                                </SfComboBox>

                                    
                                </td>
                                 <td style="width: 70%; text-align: left;height: 80px; padding-top: 1%;">
                                    
                                </td>
                            </tr>

                            <tr>
                                <td style="width: 40%; text-align: left;height: 80px; padding-left: 2%;">
                                   
                                        <label class="TSIEditFormLabel">•@L["MRPIISourceModuleLabel"] </label><br />
                                    

                                </td>

                            </tr>
                            <tr>
                                 <td style="width: 30%; text-align: left;height: 80px; padding-top: 1%;">
                                      <SfComboBox TValue="string" Index="DataSource.MRPIISourceModule-1" TItem="MRPIISourceModule" DataSource="@_mrpIISourceModuleComboBox">
                                            <ComboBoxEvents TItem="MRPIISourceModule" TValue="string" ValueChange="@MRPIISourceModuleComboBoxValueChangeHandler"></ComboBoxEvents>
                                    <ComboBoxFieldSettings Value="ID" Text="Text"></ComboBoxFieldSettings>
                                </SfComboBox>
                                    
                                </td>
                                 <td style="width: 70%; text-align: left;height: 80px; padding-top: 1%;">
                                    
                                </td>
                            </tr>

                            <tr>
                                <td>
                                        <SfButton CssClass="TSISaveButton" OnClick="OnClick"><SfIcon Size="IconSize.Medium" Name="IconName.Save"></SfIcon>&nbsp;@L["SaveButton"]</SfButton>
                                </td>
                            </tr>
                        </table>
                        </CardContent>
                        <CardFooter>
                        </CardFooter>
                    </SfCard>
                </Template>
            </DxGridLayoutItem>
        </GridLayoutItems>
    </DevGridLayout>

}
