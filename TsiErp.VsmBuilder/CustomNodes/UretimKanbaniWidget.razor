
<div class="custom-node @(Node.Selected ? " selected" : "")">
    <div class="card" style="width: 190px;">
        <div class="card-body">
            <div class="form-group">
                <img class="d-block m-auto" src="/images/Uretim_Kanbani.png" />
            </div>
        </div>
    </div>

    @foreach (var port in Node.Ports)
    {
        <PortRenderer Port="port"></PortRenderer>
    }
</div>

@code {
    [Parameter]
    public UretimKanbaniNode Node { get; set; }
}