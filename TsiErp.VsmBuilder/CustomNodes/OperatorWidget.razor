
<div class="custom-node @(Node.Selected ? " selected" : "")">
    <div class="card" style="width: 190px;">
        <div class="card-body">
            <div class="form-group">
                <table class="tg">
                    <thead>
                        <tr>
                            <td class="tg-0lax" colspan="3">
                                <img class="d-block m-auto" src="/images/Operator.png" />
                            </td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="tg-0lax">
                                <input type="text" class="form-control"
                                       @bind-value="Node.Sayi"
                                       @onmousedown:stopPropagation
                                       @onmouseup:stopPropagation
                                       @onmousemove:stopPropagation />
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @foreach (var port in Node.Ports)
    {
        <PortRenderer Port="port"></PortRenderer>
    }
</div>

@code {
    [Parameter]
    public OperatorNode Node { get; set; }
}